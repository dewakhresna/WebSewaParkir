@model Models.Master.MasterAdminModel

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="pagetitle">
    <h1>Profile</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">Home</a></li>
            <li class="breadcrumb-item active">Profile</li>
        </ol>
    </nav>
</div>

<section class="section profile">
    <div class="row">
        <div class="card">
            <div class="card-body pt-3">

                <ul class="nav nav-tabs nav-tabs-bordered mb-4">
                    <li class="nav-item">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-edit">
                            Edit Profile
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-password">
                            Change Password
                        </button>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="profile-edit">

                        <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <!-- Photo -->
                            <div class="row mb-3 align-items-center">
                                <label class="col-sm-2 col-form-label">Photo</label>
                                <div class="col-sm-10">

                                    <div class="d-flex align-items-center mb-2">
                                        <img src="/uploads/admin/profile/@Model.Photo"
                                             id="profilePreview"
                                             width="100"
                                             height="100"
                                             class="rounded-circle border me-3" />

                                        <div>
                                            <input asp-for="Photo" 
                                                   type="file"
                                                   id="profileImage"
                                                   class="form-control d-none"
                                                   accept="image/*">
                                            <button type="button"
                                                    class="btn btn-outline-primary btn-sm"
                                                    onclick="document.getElementById('profileImage').click()">
                                                <i class="bi bi-upload me-1"></i> Upload Photo
                                            </button>
                                        </div>
                                    </div>

                                    <small class="text-muted">Format: JPG, PNG (max 2MB)</small>
                                </div>
                            </div>

                            <!-- Username -->
                            <div class="row mb-3">
                                <label asp-for="Username" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Username" class="form-control" required />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="row mb-3">
                                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Email" class="form-control" type="email" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary px-4">Save</button>
                                </div>
                            </div>

                        </form>
                    </div>

                    <div class="tab-pane fade" id="profile-password">
                        <form asp-action="EditPassword" method="post">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <!-- Current Password -->
                            <div class="row mb-3">
                                <label asp-for="CurrentPassword" class="col-sm-2 col-form-label">Current Password</label>
                                <div class="col-sm-10">
                                    <input asp-for="CurrentPassword" type="password" class="form-control" required />
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- New Password -->
                            <div class="row mb-3">
                                <label asp-for="NewPassword" class="col-sm-2 col-form-label">New Password</label>
                                <div class="col-sm-10">
                                    <input asp-for="NewPassword" type="password" class="form-control" required />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Confirm Password -->
                            <div class="row mb-3">
                                <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label">Confirm Password</label>
                                <div class="col-sm-10">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary px-4">Save</button>
                                </div>
                            </div>

                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>