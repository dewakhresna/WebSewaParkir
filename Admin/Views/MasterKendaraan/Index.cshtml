@using Models.Master
@model List<MasterKendaraanModel>

@{
    ViewData["Title"] = "Car";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="pagetitle">
    <h1>Car Data</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterKendaraan">Home</a></li>
            <li class="breadcrumb-item active">Car Data</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="row">
        <div class="col-12">
            <div class="card recent-sales overflow-auto">
                <div class="filter">
                    <div class="icon">
                        <a class="btn btn-success" asp-action="add" asp-controller="MasterKendaraan"><i class="bx bx-list-plus me-1"></i> Add Car</a>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Car Data</h5>

                    <table class="table table-borderless datatable">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Merek</th>
                                <th scope="col">Tipe</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int no = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@no</td>
                                    <td>@item.Merek</td>
                                    <td>@item.Tipe</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn badge bg-warning">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn badge bg-danger">Delete</a>
                                    </td>
                                </tr>
                                no++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- End Recent Sales -->
    </div>
</section>