@model Models.Master.MasterUserModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="pagetitle">
    <h1>Edit User</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">Home</a></li>
            <li class="breadcrumb-item active">Add User</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Edit User</h5>

                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" type="email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Telp" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Telp" class="form-control" type="number" required />
                            <span asp-validation-for="Telp" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Password" class="form-control" type="password" placeholder="Kosongkan jika tidak ingin mengganti" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div class="row mb-3">
                        <label asp-for="PasswordConfirmation" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="PasswordConfirmation" class="form-control" type="password" placeholder="Kosongkan jika tidak ingin mengganti" />
                            <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</section>