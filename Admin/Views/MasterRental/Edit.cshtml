@model Models.Master.MasterRentalModel

@{
    ViewData["Title"] = "Edit Rental";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="pagetitle">
    <h1>Edit Rental</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">Home</a></li>
            <li class="breadcrumb-item active">Edit Rental</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Edit Rental</h5>

                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <label asp-for="CustomerName" class="col-sm-2 col-form-label">Customer Name</label>
                        <div class="col-sm-10">
                            <input asp-for="CustomerName" class="form-control" required />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="NoPolice" class="col-sm-2 col-form-label">No Police</label>
                        <div class="col-sm-10">
                            <input asp-for="NoPolice" class="form-control" required />
                            <span asp-validation-for="NoPolice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="CarName" class="col-sm-2 col-form-label">Car Name</label>
                        <div class="col-sm-10">
                            <select asp-for="CarName" class="form-select" aria-label="Default select example" required>
                                <option selected>Select CarName</option>
                                @foreach (var item in ViewBag.CarList)
                                {
                                    <option value="@item.Tipe" selected="@(item.Tipe == Model.CarName ? "selected" : null)">@item.Tipe</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="StartDate" class="col-sm-2 col-form-label">StartDate</label>
                        <div class="col-sm-10">
                            <input asp-for="StartDate" class="form-control" type="date" required />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="EndDate" class="col-sm-2 col-form-label">End Date</label>
                        <div class="col-sm-10">
                            <input asp-for="EndDate" class="form-control" type="date" required />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <input type="submit" value="Edit" class="btn btn-primary" />
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</section>