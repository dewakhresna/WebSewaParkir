@model WebSewaParkir.Models.User
@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="pagetitle">
    <h1>Delete User</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">Home</a></li>
            <li class="breadcrumb-item active">Delete User</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-danger">Are you sure you want to delete this user?</h5>

            <div class="mb-3">
                <strong>Name:</strong> @Model.Name <br />
                <strong>Email:</strong> @Model.Email <br />
                <strong>Phone:</strong> @Model.Telp
            </div>

            @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a href="@Url.Action("User", "Admin")" class="btn btn-secondary">Cancel</a>
            }
        </div>
    </div>
</section>
