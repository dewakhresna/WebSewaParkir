@model WebSewaParkir.Models.CarRental

@{
    ViewBag.Title = "AddCar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="pagetitle">
    <h1>Add Car</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">Home</a></li>
            <li class="breadcrumb-item active">Add Car</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add Car</h5>

                <!-- General Form Elements -->
                @using (Html.BeginForm("AddCar", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="row mb-3">
                        @Html.LabelFor(m => m.CustomerName, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.CustomerName)
                        </div>
                    </div>
                    <div class="row mb-3">
                        @Html.LabelFor(m => m.NoPolice, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.NoPolice, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.NoPolice)
                        </div>
                    </div>
                    <div class="row mb-3">
                        @Html.LabelFor(m => m.CarName, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.CarName, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.NoPolice)
                        </div>
                    </div>
                    <div class="row mb-3">
                        @Html.LabelFor(m => m.StartDate, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                            @Html.ValidationMessageFor(m => m.StartDate)
                        </div>
                    </div>
                    <div class="row mb-3">
                        @Html.LabelFor(m => m.EndDate, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                            @Html.ValidationMessageFor(m => m.EndDate)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Add Car</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
