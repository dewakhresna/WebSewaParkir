@{
    Layout = null; // Supaya halaman login tidak pakai layout utama
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Login Admin</title>

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Nunito:300,400,600,700|Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="@Url.Content("~/Content/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendor/bootstrap-icons/bootstrap-icons.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendor/boxicons/css/boxicons.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendor/quill/quill.snow.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendor/quill/quill.bubble.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendor/remixicon/remixicon.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendor/simple-datatables/style.css")" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="@Url.Content("~/Content/css/admin.css")" rel="stylesheet">
</head>

<body>

    <main>
        <div class="container">
            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                            <div class="card mb-3">
                                <div class="card-body">

                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Login to Admin Account</h5>
                                        <p class="text-center small">Enter your email & password to login</p>
                                    </div>

                                    @if (TempData["status"] != null)
                                    {
                                        <div class="alert alert-success small">
                                            @TempData["status"]
                                        </div>
                                    }

                                    @if (ViewBag.Error != null)
                                    {
                                        <div class="alert alert-danger">@ViewBag.Error</div>
                                    }


                                    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="col-12 mb-3">
                                            <label for="email" class="form-label">Email</label>
                                            <div class="input-group has-validation">
                                                <span class="input-group-text">@@</span>
                                                @Html.TextBox("email", null, new { @class = "form-control", @type = "email", required = "required" })
                                                @Html.ValidationMessage("email", "", new { @class = "invalid-feedback d-block" })
                                            </div>
                                        </div>

                                        <div class="col-12 mb-3">
                                            <label for="password" class="form-label">Password</label>
                                            @Html.Password("password", null, new { @class = "form-control", required = "required" })
                                            @Html.ValidationMessage("password", "", new { @class = "invalid-feedback d-block" })
                                        </div>

                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Login</button>
                                        </div>
                                    }

                                </div>
                            </div>

                            <div class="credits">
                                Designed by Kandang Mobil
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- Vendor JS Files -->
    <script src="@Url.Content("~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/simple-datatables/simple-datatables.js")"></script>
    <script src="@Url.Content("~/Content/js/main.js")"></script>
</body>
</html>
